---
// src/components/icons/LogoCodeData.astro
// Este componente solo contiene el SVG del logo, sin texto.
// La prop 'className' permite aplicar clases de Tailwind para tama√±o y color.
const { class: className } = Astro.props;
---
<svg width="200" height="150" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"
class={`w-8 h-8 ${className}`}
>
  <defs>
    <style>
      .icon-stroke {
        fill: none;
        stroke: var(--logo-stroke);
        stroke-width: 7;
        stroke-linecap: round;
        stroke-linejoin: round;
      }
      .node-circle {
        fill: var(--logo-fill);
        stroke: var(--logo-stroke);
        stroke-width: 7;
      }
    </style>
  </defs>

  <line x1="25" y1="50" x2="55" y2="20" class="icon-stroke" />
  <line x1="25" y1="50" x2="55" y2="80" class="icon-stroke" />

  <circle cx="25" cy="50" r="8" class="node-circle" />
  <circle cx="55" cy="20" r="8" class="node-circle" />
  <circle cx="55" cy="80" r="8" class="node-circle" />

  <polyline points="55,40 65,50 55,60" class="icon-stroke" />

  <line x1="75" y1="50" x2="95" y2="50" class="icon-stroke" />
</svg>
